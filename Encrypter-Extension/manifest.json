{
    "manifest_version": 3,
    "name": "Text Encrypter",
    "version": "1.0",
    "description": "A Chrome extension to encrypt and decrypt the text",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "32": "icons/icon128.png",
        "48": "icons/icon128.png",
        "128": "icons/icon128.png"
      }
    },
    "icons": {
      "16": "icons/icon128.png",
      "32": "icons/icon128.png",
      "48": "icons/icon128.png",
      "128": "icons/icon128.png"
    },
    "permissions": [
      "tabs"
    ]
  }